---
import Button from "../Button.astro";
---

<section id="Gange" class="min-h-screen flex flex-col items-center justify-center bg-[#fdf8f6] text-center p-4">
  <!-- Overskrift -->
  <h1 class="text-40 font-WindstoneSerif text-blue-500">Hvor mange gange vil du have leveret?</h1>
  <p class="text-18 font-LivvicRegular text-darkgreyblue-500 mt-2">Vælg én og klik videre</p>
  
  <!-- Valgmuligheder -->
  <div class="mt-6 grid grid-cols-1 gap-20 md:grid-cols-4">
    <button class="px-12 py-4 border-2 border-denimblue-500 rounded-20 text-denimblue-500 font-bold hover:bg-greyblue-500 hover:text-white hover:border-none transition duration-200">
      3 gange
    </button>
    <button class="px-12 py-4 border-2 border-denimblue-500 rounded-20 text-denimblue-500 font-bold hover:bg-greyblue-500 hover:text-white hover:border-none transition duration-200">
      6 gange
    </button>
    <button class="px-12 py-4 border-2 border-denimblue-500 rounded-20 text-denimblue-500 font-bold hover:bg-greyblue-500 hover:text-white hover:border-none transition duration-200">
      9 gange
    </button>
    <button class="px-12 py-4 border-2 border-denimblue-500 rounded-20 text-denimblue-500 font-bold hover:bg-greyblue-500 hover:text-white hover:border-none transition duration-200">
      12 gange
    </button>
  </div>
  
  <!-- Videre Knap -->
  <div class="pt-4 md:mt-8">
    <div class="w-36 text-center mx-auto md:w-[150px]">
      <Button 
        textMobile="Videre"
        textDesktop="Videre"
        link="#Ofte"
        backgroundColor="#2B3D5A"
        textColor="#FFF"
        size="small md:large"
      />
    </div>
  </div>
</section>


