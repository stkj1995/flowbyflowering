---
import { Image } from 'astro:assets';
import Button from "../Button.astro";
import gulblomst1 from '../../assets/images/gulblomst1.svg';
import blåblomst from '../../assets/images/blåblomst.svg';
---

<section id="Kurv">
    <div class="txt pl-14 md:pl-28">
        <h2 class="text-blue-500 font-WindstoneSerif text-40 pb-14 leading-tight">Du er næsten i mål!</h2>
        <p class="font-LivvicRegular text-darkgreyblue-500 text-18 pb-14 pr-20 leading-tight">Her kan du se en oversigt over din valg. Du har mulighed for at redigere din valg, hvis du pludseligt skifter mening.</p>
    </div>

    <!-- indkøbskurv + betalingskurv -->
    <div class="alt md:px-16 flex flex-col md:flex-row space-y-6 md:space-x-2">
        <!-- indkøbskurv -->
        <div class="bg-greyblue-500 text-white mx-5 rounded-40 pl-10 pt-8 pb-20 flex-2">
            <h2 class="text-40 pb-10 font-WindstoneSerif leading-tight">Din indkøbskurv</h2>
            <!-- indhold i kurv -->
            <div class="gridkurv grid grid-cols-1 md:grid-cols-3 space-y-5 md:space-y-0 md:space-x-0">
                <div class="indhold text-18 font-LivvicRegular">
                    <p class="font-[700] pb-6">Abonnement</p>
                    <p class="pb-3">Forudbetalt abonnement</p>
                    <p class="pb-3">Classic</p>
                    <p class="pb-3">Light</p>
                    <p class="pb-3">3 gange</p>
                    <p class="pb-3">Hver uge</p>
                    <p class="pb-3">Ingen kort</p>
                    <p class="font-[700] pt-14 underline">Rediger valg</p>
                </div>
                <!-- antal -->
                <div class="md:pl-52">
                    <p class="font-[700] pb-6">Antal</p>
                    <p>1</p>
                </div>
                <!-- pris - skal rykkes mere mod venstre på mobil -->
                <div class="pl-0 pt-10 md:pt-0 md:pl-32">
                    <p class="font-[700] text-18">Pris:</p>
                    <p class="pt-3">1.084,-</p>
                </div>
            </div>
        </div>

        <!-- købsoversigt -->
        <div class="bg-greyblue-500 text-white mx-5 rounded-40 pl-10 pt-10 pb-12 space-y-3 flex-1">
            <h2 class="text-40 font-WindstoneSerif">Købsoversigt</h2>
            <div class="grid grid-cols-2 text-18">
                <p class="font-LivvicRegular font-[700]">Subtotal</p>
                <p>1.084,-</p>
            </div>
            <div class="grid grid-cols-2 text-18 md:pt-40">
                <p class="font-LivvicRegular font-[700]">Total</p>
                <p>1.084,-</p>
                <p class="grid col-start-1 pt-3">(inkluderer 216,8,- moms)</p>
            </div>
            <div class="pl-5 md:">
                <a href="">
                    <div class="pt-20">
                        <div class="w-80 text-center md:w-[330px] md:ml-10">
                            <Button 
                                textMobile="Gå til betaling"
                                textDesktop="Gå til betaling"
                                link=""
                                backgroundColor="#ffffff"
                                textColor="#00054E"
                                size="small md:large"
                            />
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- blomster img -->
    <div class="grid place-items-center pt-16 pb-10">
        <Image src={gulblomst1} alt="illustration af en gul blomst" class="" />
    </div>

    <div class="grid place-items-center pt-16 pb-10">
        <Image src={blåblomst} alt="illustration af en blå blomst" class="" />
    </div>
</section>
